---
import type { Project } from '../utils/personData';
import { formatPeriod } from '../utils/personData';

interface Props {
  projects: Project[];
  title: string;
}

const { projects, title } = Astro.props;

// Sort projects by start year (most recent first)
const sortedProjects = [...projects].sort((a, b) => {
  const yearA = parseInt(a.ano_inicio) || 0;
  const yearB = parseInt(b.ano_inicio) || 0;
  return yearB - yearA;
});
---

{projects.length > 0 && (
  <section class="projects-section">
    <h2>{title}</h2>
    <div class="projects-list">
      {sortedProjects.map((project) => (
        <article class="project">
          <h3>{project.nome}</h3>
          <p class="period">{formatPeriod(project.ano_inicio, project.ano_conclusao)}</p>
          
          {project.descricao && project.descricao.length > 0 && (
            <div class="description">
              {project.descricao.map((desc) => (
                <p>{desc}</p>
              ))}
            </div>
          )}
          
          {project.integrantes && project.integrantes.length > 0 && (
            <div class="team">
              <h4>Team Members:</h4>
              <ul>
                {project.integrantes.map((member) => (
                  <li>
                    <strong>{member.nome}</strong>
                    {member.papel && ` - ${member.papel}`}
                  </li>
                ))}
              </ul>
            </div>
          )}
          
          {project.financiadores && project.financiadores.length > 0 && (
            <div class="funding">
              <h4>Funding:</h4>
              <ul>
                {project.financiadores.map((financier) => (
                  <li>
                    <strong>{financier.nome}</strong>
                    {financier.tipo_apoio && ` - ${financier.tipo_apoio}`}
                  </li>
                ))}
              </ul>
            </div>
          )}
        </article>
      ))}
    </div>
  </section>
)}

<style>
  .projects-section {
    margin: 2rem 0;
  }

  .projects-section h2 {
    margin: 0 0 1.5rem 0;
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a1a1a;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #0066cc;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project {
    padding: 1.5rem;
    background: #f8f9fa;
    border-left: 4px solid #6f42c1;
    border-radius: 4px;
  }

  .project h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.15rem;
    font-weight: 600;
    color: #1a1a1a;
    line-height: 1.3;
  }

  .project .period {
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
  }

  .description p {
    margin: 0 0 0.75rem 0;
    font-size: 0.95rem;
    line-height: 1.6;
    color: #4a4a4a;
  }

  .description p:last-child {
    margin-bottom: 0;
  }

  .team,
  .funding {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #dee2e6;
  }

  .team h4,
  .funding h4 {
    margin: 0 0 0.5rem 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: #333;
  }

  .team ul,
  .funding ul {
    margin: 0;
    padding-left: 1.5rem;
    list-style-type: disc;
  }

  .team li,
  .funding li {
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
    color: #4a4a4a;
  }

  .team li strong,
  .funding li strong {
    color: #333;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .projects-section h2 {
      font-size: 1.3rem;
    }

    .project {
      padding: 1.25rem;
    }

    .project h3 {
      font-size: 1.05rem;
    }

    .description p {
      font-size: 0.9rem;
    }

    .team li,
    .funding li {
      font-size: 0.85rem;
    }
  }
</style>
