---
import type { Project } from '../utils/personData';
import { formatPeriod } from '../utils/personData';

interface Props {
  projects: Project[];
  title: string;
}

const { projects, title } = Astro.props;

// Sort projects by start year (most recent first)
const sortedProjects = [...projects].sort((a, b) => {
  const yearA = parseInt(a.ano_inicio) || 0;
  const yearB = parseInt(b.ano_inicio) || 0;
  return yearB - yearA;
});

// Function to clean description - remove standard Lattes text
function cleanDescription(descArray: string[]): string[] {
  if (!descArray || descArray.length === 0) return [];
  
  return descArray.map(desc => {
    // Remove text starting with "Situação:" or similar patterns
    let cleaned = desc.replace(/Situação:.*?(?=\.|$)/gs, '');
    cleaned = cleaned.replace(/Natureza:.*?(?=\.|$)/gs, '');
    cleaned = cleaned.replace(/Alunos envolvidos:.*?(?=\.|$)/gs, '');
    cleaned = cleaned.replace(/Integrantes:.*?(?=Financiador|$)/gs, '');
    cleaned = cleaned.replace(/Financiador\(es\):.*?(?=\.|$)/gs, '');
    
    // Remove extra spaces
    cleaned = cleaned.replace(/\s+/g, ' ').trim();
    
    // Remove multiple consecutive dots (2 or more) and replace with single dot
    cleaned = cleaned.replace(/\.{2,}/g, '.');
    
    // Remove spaces before dots
    cleaned = cleaned.replace(/\s+\./g, '.');
    
    // Ensure only one dot at the end
    cleaned = cleaned.replace(/\.+$/, '.');
    
    return cleaned;
  }).filter(desc => desc.length > 10); // Keep only meaningful descriptions
}

// Determine project status
function getProjectStatus(anoInicio: string, anoConclusao: string): { label: string; class: string } {
  if (!anoConclusao || anoConclusao.toLowerCase() === 'atual') {
    return { label: 'Em andamento', class: 'status-active' };
  }
  return { label: 'Concluído', class: 'status-completed' };
}

// Generate section ID from title (for anchor links)
const sectionId = 'projetos';
---

{projects.length > 0 && (
  <section class="projects-section" id={sectionId}>
    <h2>{title}</h2>
    <div class="projects-list">
      {sortedProjects.map((project, index) => {
        // Generate unique ID for each project
        const projectId = `projeto-${index}-${project.nome.toLowerCase().replace(/[^a-z0-9]+/g, '-').substring(0, 50)}`;
        const status = getProjectStatus(project.ano_inicio, project.ano_conclusao);
        const cleanedDesc = cleanDescription(project.descricao || []);
        
        return (
        <article class="project" id={projectId}>
          <div class="project-header">
            <h3>{project.nome}</h3>
            <span class={`status-badge ${status.class}`}>{status.label}</span>
          </div>
          <p class="period">{formatPeriod(project.ano_inicio, project.ano_conclusao)}</p>
          
          {cleanedDesc.length > 0 && (
            <div class="description">
              {cleanedDesc.map((desc) => (
                <p>{desc}</p>
              ))}
            </div>
          )}
          
          {project.integrantes && project.integrantes.length > 0 && (
            <div class="team">
              <h4>Team Members:</h4>
              <ul>
                {project.integrantes.map((member) => (
                  <li>
                    <strong>{member.nome}</strong>
                    {member.papel && ` - ${member.papel}`}
                  </li>
                ))}
              </ul>
            </div>
          )}
          
          {project.financiadores && project.financiadores.length > 0 && (
            <div class="funding">
              <h4>Funding:</h4>
              <ul>
                {project.financiadores.map((financier) => (
                  <li>
                    <strong>{financier.nome}</strong>
                    {financier.tipo_apoio && ` - ${financier.tipo_apoio}`}
                  </li>
                ))}
              </ul>
            </div>
          )}
        </article>
      );
      })}
    </div>
  </section>
)}

<style>
  .projects-section {
    margin: 2rem 0;
  }

  .projects-section h2 {
    margin: 0 0 1.5rem 0;
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a1a1a;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #0066cc;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project {
    padding: 1.5rem;
    background: #f8f9fa;
    border-left: 4px solid #6f42c1;
    border-radius: 4px;
  }

  .project-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .project h3 {
    margin: 0;
    font-size: 1.15rem;
    font-weight: 600;
    flex: 1;
    color: #1a1a1a;
    line-height: 1.3;
  }

  .project .period {
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-size: 0.8rem;
    font-weight: 600;
    border-radius: 12px;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .status-active {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .status-completed {
    background: #d1ecf1;
    color: #0c5460;
    border: 1px solid #bee5eb;
  }

  .description p {
    margin: 0 0 0.75rem 0;
    font-size: 0.95rem;
    line-height: 1.6;
    color: #4a4a4a;
  }

  .description p:last-child {
    margin-bottom: 0;
  }

  .team,
  .funding {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #dee2e6;
  }

  .team h4,
  .funding h4 {
    margin: 0 0 0.5rem 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: #333;
  }

  .team ul,
  .funding ul {
    margin: 0;
    padding-left: 1.5rem;
    list-style-type: disc;
  }

  .team li,
  .funding li {
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
    color: #4a4a4a;
  }

  .team li strong,
  .funding li strong {
    color: #333;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .projects-section h2 {
      font-size: 1.3rem;
    }

    .project {
      padding: 1.25rem;
    }

    .project h3 {
      font-size: 1.05rem;
    }

    .description p {
      font-size: 0.9rem;
    }

    .team li,
    .funding li {
      font-size: 0.85rem;
    }
  }
</style>
