    margin: 2rem 0;
  }

  .related-projects h3 {
    margin: 0 0 1.5rem 0;
    font-size: 1.3rem;
    font-weight: 600;
    color: #1a1a1a;
  }

  .empty-state {
    padding: 2rem;
    text-align: center;
    color: #6b7280;
    background: #f9fafb;
