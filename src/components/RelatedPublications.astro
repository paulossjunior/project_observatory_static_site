---
import type { PublicationReference } from '../utils/researchLineData';

interface Props {
  publications: PublicationReference[];
}

const { publications } = Astro.props;

// Sort publications by year (descending)
const sortedPublications = [...publications].sort((a, b) => b.ano.localeCompare(a.ano));

// Get unique values for filters
const publicationTypes = [...new Set(publications.map(p => p.tipo))].sort();
const publicationYears = [...new Set(publications.map(p => p.ano))].sort((a, b) => b.localeCompare(a));
---

<section class="related-publications">
  <h3>Related Publications ({publications.length})</h3>
  
  {publications.length === 0 ? (
    <p class="empty-state">Nenhuma publicação associada a esta linha de pesquisa.</p>
  ) : (
    <>
      <div class="filters">
        <div class="filter-group">
          <label for="filter-pub-type">Tipo:</label>
          <select id="filter-pub-type" class="filter-select" data-filter="tipo">
            <option value="">Todos</option>
            {publicationTypes.map(type => (
              <option value={type}>{type}</option>
            ))}
          </select>
        </div>
        
        <div class="filter-group">
          <label for="filter-pub-year">Ano:</label>
          <select id="filter-pub-year" class="filter-select" data-filter="ano">
            <option value="">Todos</option>
            {publicationYears.map(year => (
              <option value={year}>{year}</option>
            ))}
          </select>
        </div>
      </div>
      
      <div class="table-container">
        <table class="publications-table">
          <thead>
            <tr>
              <th class="sortable" data-sort="titulo">
                Título
                <span class="sort-icon">⇅</span>
              </th>
              <th class="sortable" data-sort="tipo">
                Tipo
                <span class="sort-icon">⇅</span>
              </th>
              <th class="sortable" data-sort="ano">
                Ano
                <span class="sort-icon">⇅</span>
              </th>
              <th>Autores</th>
              <th>Researcher</th>
            </tr>
          </thead>
          <tbody>
            {sortedPublications.map(pub => (
              <tr 
                data-tipo={pub.tipo}
                data-ano={pub.ano}
                data-titulo={pub.titulo}
              >
                <td class="publication-title">{pub.titulo}</td>
                <td>
                  <span class="badge badge-publication">
                    {pub.tipo}
                  </span>
                </td>
                <td class="year">{pub.ano}</td>
                <td class="authors">
                  {pub.autores.length > 3 
                    ? `${pub.autores.slice(0, 3).join(', ')} et al.`
                    : pub.autores.join(', ')
                  }
                </td>
                <td>
                  <a href={`/person/${pub.personId}`} class="person-link">
                    {pub.personName}
                  </a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
      
      <p class="result-count">
        Showing <span id="pub-visible-count">{publications.length}</span> of {publications.length} publications
      </p>
    </>
  )}
</section>

<script>
  // Filter and sort functionality for publications
  document.addEventListener('DOMContentLoaded', () => {
    const table = document.querySelector('.publications-table');
    if (!table) return;
    
    const tbody = table.querySelector('tbody');
    const rows = Array.from(tbody?.querySelectorAll('tr') || []);
    const filters = document.querySelectorAll('.related-publications .filter-select');
    const sortHeaders = document.querySelectorAll('.related-publications .sortable');
    const visibleCount = document.getElementById('pub-visible-count');
    
    let currentSort = { column: 'ano', direction: 'desc' };
    
    // Filter function
    function applyFilters() {
      const filterValues: Record<string, string> = {};
      filters.forEach((select) => {
        const filterType = (select as HTMLSelectElement).dataset.filter;
        const value = (select as HTMLSelectElement).value;
        if (filterType) filterValues[filterType] = value;
      });
      
      let visibleRows = 0;
      rows.forEach(row => {
        const el = row as HTMLElement;
        let show = true;
        
        Object.entries(filterValues).forEach(([key, value]) => {
          if (value && el.dataset[key] !== value) {
            show = false;
          }
        });
        
        el.style.display = show ? '' : 'none';
        if (show) visibleRows++;
      });
      
      if (visibleCount) {
        visibleCount.textContent = visibleRows.toString();
      }
    }
    
    // Sort function
    function sortTable(column: string) {
      const direction = currentSort.column === column && currentSort.direction === 'asc' ? 'desc' : 'asc';
      currentSort = { column, direction };
      
      const sortedRows = rows.sort((a, b) => {
        const aEl = a as HTMLElement;
        const bEl = b as HTMLElement;
        const aValue = aEl.dataset[column] || '';
        const bValue = bEl.dataset[column] || '';
        
        const comparison = aValue.localeCompare(bValue, 'pt-BR');
        return direction === 'asc' ? comparison : -comparison;
      });
      
      sortedRows.forEach(row => tbody?.appendChild(row));
      
      // Update sort icons
      sortHeaders.forEach(header => {
        const icon = header.querySelector('.sort-icon');
        if (icon) {
          if ((header as HTMLElement).dataset.sort === column) {
            icon.textContent = direction === 'asc' ? '↑' : '↓';
          } else {
            icon.textContent = '⇅';
          }
        }
      });
    }
    
    // Event listeners
    filters.forEach(select => {
      select.addEventListener('change', applyFilters);
    });
    
    sortHeaders.forEach(header => {
      header.addEventListener('click', () => {
        const column = (header as HTMLElement).dataset.sort;
        if (column) sortTable(column);
      });
    });
    
    // Set initial sort indicator
    const yearHeader = Array.from(sortHeaders).find(h => (h as HTMLElement).dataset.sort === 'ano');
    const yearIcon = yearHeader?.querySelector('.sort-icon');
    if (yearIcon) yearIcon.textContent = '↓';
  });
</script>

<style>
  .related-publications {
