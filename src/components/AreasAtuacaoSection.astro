---
import type { AreaAtuacao } from '../utils/personData';

interface Props {
  areas: AreaAtuacao[];
}

const { areas } = Astro.props;
---

{areas && areas.length > 0 && (
  <section class="areas-section" id="areas">
    <h2>Áreas de Atuação</h2>
    <div class="areas-list">
      {areas.map((area) => (
        <article class="area">
          <p class="area-path">
            {area.grande_area && <span class="grande-area">{area.grande_area}</span>}
            {area.area && <span class="separator">›</span>}
            {area.area && <span class="area-name">{area.area}</span>}
            {area.subarea && <span class="separator">›</span>}
            {area.subarea && <span class="subarea">{area.subarea}</span>}
            {area.especialidade && <span class="separator">›</span>}
            {area.especialidade && <span class="especialidade">{area.especialidade}</span>}
          </p>
        </article>
      ))}
    </div>
  </section>
)}

<style>
  .areas-section {
    margin: 2rem 0;
  }

  .areas-section h2 {
    margin: 0 0 1.5rem 0;
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a1a1a;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #0066cc;
  }

  .areas-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .area {
    padding: 1rem;
    background: #f8f9fa;
    border-left: 4px solid #17a2b8;
    border-radius: 4px;
  }

  .area-path {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
    color: #333;
  }

  .separator {
    margin: 0 0.5rem;
    color: #999;
  }

  .grande-area {
    font-weight: 500;
  }

  .area-name,
  .subarea {
    font-weight: 500;
  }

  .especialidade {
    font-weight: 600;
    color: #0066cc;
  }

  @media (max-width: 768px) {
    .areas-section h2 {
      font-size: 1.3rem;
    }

    .area {
      padding: 0.875rem;
    }

    .area-path {
      font-size: 0.9rem;
    }
  }
</style>
