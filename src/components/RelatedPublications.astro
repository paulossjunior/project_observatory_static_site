    margin-left: 0.25rem;
    color: #9ca3af;
  }

  .publication-title {
    font-weight: 500;
    color: #1a1a1a;
    max-width: 400px;
  }

  .year {
    font-weight: 600;
    color: #4b5563;
  }

  .authors {
    font-size: 0.85rem;
    color: #6b7280;
    max-width: 300px;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 12px;
    white-space: nowrap;
  }

  .badge-publication {
    background: #fef3c7;
    color: #92400e;
  }

  .person-link {
    color: #0066cc;
    text-decoration: none;
  }

  .person-link:hover {
    text-decoration: underline;
  }

  .result-count {
    margin-top: 1rem;
    font-size: 0.85rem;
    color: #6b7280;
  }

  .result-count span {
    font-weight: 600;
    color: #1a1a1a;
  }

  @media (max-width: 768px) {
    .filters {
      flex-direction: column;
    }

    .filter-group {
      width: 100%;
    }

    .publications-table {
      font-size: 0.85rem;
    }

    .publications-table th,
    .publications-table td {
      padding: 0.5rem 0.75rem;
    }

    .publication-title,
    .authors {
      max-width: 200px;
    }
  }
</style>
