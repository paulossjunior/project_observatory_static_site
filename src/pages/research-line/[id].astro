---
import RelatedProjects from '../../components/RelatedProjects.astro';
import RelatedPublications from '../../components/RelatedPublications.astro';
import RelatedPeople from '../../components/RelatedPeople.astro';
import { getAllResearchLines } from '../../utils/researchLineData';

export async function getStaticPaths() {
  const researchLines = await getAllResearchLines();
  
  return Array.from(researchLines.values()).map((linha) => ({
    params: { id: linha.id },
    props: { linha }
  }));
}

const { id } = Astro.params;
const { linha } = Astro.props;

if (!linha) {
  return Astro.redirect('/404');
}

// Format recent activity date
const recentActivityYear = linha.stats.recentActivity 
  ? new Date(linha.stats.recentActivity).getFullYear()
  : 'N/A';
