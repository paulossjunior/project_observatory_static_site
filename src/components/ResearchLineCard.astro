---
import type { ResearchLineData } from '../utils/researchLineData';

interface Props {
  linha: ResearchLineData;
  showStats?: boolean;
}

const { linha, showStats = true } = Astro.props;
---

<article class="research-line-card">
  <h3>
    <a href={`/research-line/${linha.id}`}>{linha.nome}</a>
  </h3>
  {linha.objetivo && (
    <p class="objetivo">{linha.objetivo}</p>
  )}
  {showStats && (
    <div class="stats">
      <span class="stat-item" title="Projects">
        <span class="stat-icon">ðŸ“Š</span>
        <span class="stat-value">{linha.stats.totalProjects}</span>
        <span class="stat-label">projeto{linha.stats.totalProjects !== 1 ? 's' : ''}</span>
      </span>
      <span class="stat-item" title="Publications">
        <span class="stat-icon">ðŸ“„</span>
        <span class="stat-value">{linha.stats.totalPublications}</span>
        <span class="stat-label">publicaÃ§{linha.stats.totalPublications !== 1 ? 'Ãµes' : 'Ã£o'}</span>
      </span>
      <span class="stat-item" title="Researchers">
        <span class="stat-icon">ðŸ‘¥</span>
        <span class="stat-value">{linha.stats.totalPeople}</span>
        <span class="stat-label">pesquisador{linha.stats.totalPeople !== 1 ? 'es' : ''}</span>
      </span>
    </div>
  )}
</article>

<style>
  .research-line-card {
    padding: 1.5rem;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-left: 4px solid #ffc107;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .research-line-card:hover {
    border-left-color: #fbbf24;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .research-line-card h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.15rem;
    font-weight: 600;
    line-height: 1.4;
  }

  .research-line-card h3 a {
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .research-line-card h3 a:hover {
    color: #0066cc;
  }

  .research-line-card h3 a:focus {
    outline: 2px solid #0066cc;
    outline-offset: 2px;
    border-radius: 2px;
  }

  .objetivo {
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    line-height: 1.6;
    color: #6b7280;
  }

  .stats {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    padding-top: 0.75rem;
    border-top: 1px solid #e5e7eb;
  }

  .stat-item {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.85rem;
    color: #4b5563;
  }

  .stat-icon {
    font-size: 1rem;
  }

  .stat-value {
    font-weight: 600;
    color: #1a1a1a;
  }

  .stat-label {
    color: #6b7280;
  }

  @media (max-width: 768px) {
    .research-line-card {
      padding: 1.25rem;
    }

    .research-line-card h3 {
      font-size: 1rem;
    }

    .objetivo {
      font-size: 0.85rem;
    }

    .stats {
      gap: 0.75rem;
    }

    .stat-item {
      font-size: 0.8rem;
    }

    .stat-icon {
      font-size: 0.9rem;
    }
  }
</style>
